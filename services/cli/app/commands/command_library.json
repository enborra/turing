{
    "file_locations": {
        "services_source_directory": "system/",
        "services_run_directory_osx": "/Library/LaunchDaemons/",
        "services_run_directory_raspberry_pi": "/lib/systemd/system/"
    },

    "services": {
        "central_station": {
            "name": "com.turing.central_station",
            "enabled": true,

            "install": {
                "osx": "com.turing.central_station.plist",
                "raspberry_pi": "com.turing.central_station.service"
            }
        },

        "display": {
            "name": "com.turing.display",
            "enabled": true,

            "install": {
                "osx": "com.turing.display.plist",
                "raspberry_pi": "com.turing.display.service"
            }
        },

        "vox": {
            "name": "com.turing.vox",
            "enabled": false,

            "install": {
                "osx": "com.turing.vox.plist",
                "raspberry_pi": "com.turing.vox.service"
            }
        },

        "kanata": {
            "name": "com.turing.kanata",
            "enabled": true,

            "install": {
                "osx": "com.turing.kanata.plist",
                "raspberry_pi": "com.turing.kanata.service"
            }
        }
    }
}
